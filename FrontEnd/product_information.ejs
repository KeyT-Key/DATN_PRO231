<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>product-inforamtion</title>
    <link rel="stylesheet" href="/Product_information.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="header">
        <div class="nav-links">
            <a href="/signup" class="signup" id="signup">Đăng Ký</a>
            <div class="khoanggiua" id="khoanggiua"></div>
            <a href="/login" class="signup" id="login">Đăng nhập</a>
            <a href="/user_information" class="signup" id="user-information">User information</a>
        </div>
        <div class="nav-container">
            <div class="logo">
                <a href="/">
                    <img src="/Images/Logo.jpg" alt="">
                </a>
            </div>
            <div class="search-cart">
                <div class="search-bar">
                    <input type="text" id="search-input" placeholder="Tìm kiếm..." autocomplete="off">
                    <button type="submit" id="search-button">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                    <div id="suggestions" class="suggestions"></div>
                </div>
                <div class="nav-cart">
                    <a href="/cart" class="cart-icon"><i class="fa-solid fa-cart-shopping"></i></a>
                </div>
            </div>
        </div>
    </header>
    <!-- Product_information -->
    <div class="wrapper">
        <div class="product-details">
            <!-- Product Grid -->
            <div class="grid-2">
                <!-- Left Column - Images -->
                <div class="img-section">
                    <div class="main-img">
                        <img src="" alt="Product" id="mainImage">
                    </div>
                    <div class="thumbs">
                        <div class="thumb">
                            <img src="" alt="Thumbnail 1" id="image1">
                        </div>
                        <div class="thumb">
                            <img src="" alt="Thumbnail 2" id="image2">
                        </div>
                        <div class="thumb">
                            <img src="" alt="Thumbnail 3" id="image3">
                        </div>
                    </div>
                </div>
    
                <!-- Right Column - Product Details -->
                <div class="details-section">
                    <div>
                        <h1 class="product-name" id="product-name"></h1>
                        <div class="rating">
                            <span class="rating-label">Đánh Giá:</span>
                            <div class="stars">
                                <i class="far fa-star" data-value="1"></i>
                                <i class="far fa-star" data-value="2"></i>
                                <i class="far fa-star" data-value="3"></i>
                                <i class="far fa-star" data-value="4"></i>
                                <i class="far fa-star" data-value="5"></i>
                            </div>
                            <span class="rating-number" id="selected-rating">0</span>
                        </div>
                        
                        <p class="reviews">Còn <span  id="products_number"></span> sản phẩm</p>
                    </div>
                    <!-- Variants
                    <div class="variants">
                        <div>
                            <h3 class="variant-label">Loại</h3>
                            <div class="variant-options">
                                <button class="variant-btn">
                                    Play boy kẻ đen
                                </button>
                                <button class="variant-btn">
                                    Play boy kẻ nâu
                                </button>
                                <button class="variant-btn">
                                    Play boy trơn đen
                                </button>
                            </div>
                        </div>
                    </div> -->
    
                    <!-- Quantity -->
                    <div class="quantity">
                        <h3 class="quantity-label">Số Lượng</h3>
                        <div class="quantity-controls">
                            <button class="qty-btn" id="decreaseBtn" aria-label="Giảm số lượng">
                                <i class="fas fa-minus"></i>
                            </button>
                            <input type="number" value="1" min="1" class="qty-input" id="quantityInput" aria-label="Số lượng">
                            <button class="qty-btn" id="increaseBtn" aria-label="Tăng số lượng">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <p class="price" id="product-price"></p>
                    </div>
    
                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <button class="add-to-cart">
                            <i class="fas fa-cart-plus mr-2"></i>
                            Thêm Vào Giỏ Hàng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="tabs">
          <h2 class="tab" onclick="showContent(1)">Bình Luận </h2>
          <h2 class="tab" onclick="showContent(2)">Mô Tả</h2>
          <div class="underline"></div>
        </div>
    
        <div class="content" id="content-1">
            <div class="comments">
                
            </div>
          <input type="text" id="reviewInput">
          <button id="addReviewButton">thêm bình luận</button>
        </div>
    
        <div class="content" id="content-2">
          <p id="description"></p>
        </div>
      </div>
     <!-- Footer -->
     <footer class="footer">
        <div class="footer-content">
            <div class="footer-logo" style="color: white;">Fake</div>
        </div>
        <p class="footer-text">&copy; 2025 Fake. All Rights Reserved.</p>
    </footer>
</body>
<script src="/Product_information.js"></script>
</html>